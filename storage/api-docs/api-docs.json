                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The id field is required. (and 1 more error)"
                                        },
                                        "errors": {
                                            "properties": {
                                                "id": {
                                                    "description": "An array of error messages related to the id field.",
